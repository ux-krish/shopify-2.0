<h1 class="text-white text-3xl font-bold mb-2">{{ section.settings.title }}</h1>
<p class="font-light text-gray-300 text-sm mb-5">{{ section.settings.subtitle }}</p>
{% if section.settings.button_url == blank %}
  {% assign shop_url = routes.root_url %}
{% else %}
    {% assign shop_url = section.settings.button_url %}
{% endif %}
<a class="mt-5 px-5 py-2 text-sm bg-slate-500 text-white rounded-md hover:bg-slate-600 active:bg-black" href="{{ shop_url }}">{{ section.settings.button_label }}</a>

{% schema %}
    {
        "name":"Template 404",
        "tag": "section",
        "class": "h-screen w-full flex flex-col items-center justify-center",
        "settings": [
            {
                "type": "text",
                "id":"title",
                "label": "404",
                "default" : "404 Headling Title"
            },
            {
                "type": "text",
                "id":"subtitle",
                "label": "404 Subtitle",
                "default":"404 Subtitle"
            },
            {
                "type": "text",
                "id":"button_label",
                "label": "Button Label",
                "default":"Back to Homepage"
            },
            {
                "type": "url",
                "id":"button_url",
                "label": "Button Url"
            }
        ]
    }   
{% endschema %}